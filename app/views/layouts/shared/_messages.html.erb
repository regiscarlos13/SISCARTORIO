<% flash.each do |name, msg|%>
	<% if msg.is_a?(String) %>
		<script type="text/javascript">
			$.notify("<%= msg %>", "<%= if name == "notice" then "success" elsif name == "alert" then "error" elsif name == "success" then "success" elsif name == "danger" then "error" end%>"  ,{position:'top-center'})
		</script>
	<% end %>
<% end %>
